ans = input ("1 + 1 = ")
if ans == ("2"):
    print ("정답!")
else:
    print ("오답!")
    print ("정답은 2입니다!")
    exit()

ans = input ("3 * 2 = ")
if ans == ("6"):
    print ("정답!")
else:
    print ("오답!")
    print ("정답은 6입니다!")
    exit()

ans = input ("3 * 2 * 4 / 6 = ")
if ans == ("4"):
    print ("정답!")
else:
    print ("오답")
    print ("정답은 4입니다!")
    exit()
